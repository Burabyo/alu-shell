#!/usr/bin/env bash
#coding
PID_FILE="/var/run/my_process.pid"
PROCESS_SCRIPT="/path/to/manage_my_process"  # Update this path to where manage_my_process is located

start() {
    if [ -f "$PID_FILE" ]; then
        echo "Process already running!"
    else
        # Start the process
        nohup bash "$PROCESS_SCRIPT" &> /dev/null &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
    fi
}

stop() {
    if [ -f "$PID_FILE" ]; then
        # Kill the process
        kill "$(cat $PID_FILE)" 2>/dev/null
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
    else
        echo "No process running!"
    fi
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

# Check arguments passed to the script
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac

